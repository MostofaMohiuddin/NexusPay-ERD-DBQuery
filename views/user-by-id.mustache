<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Get User's Profile</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>

    <h1>Get User's Profile</h1>
    <br />

    <div class="code-container">
      <h2>
        SELECT * FROM users WHERE mobile_no = input.mobile_no AND pin =
        input.pin
      </h2>
    </div>

    <br />
    

    <div class="row">
      <form method="POST" action="/user">
        <span>
          <input
            class="swing"
            id="mobileNo"
            type="text"
            placeholder="Mobile No"
            name="mobileNo"
          /><label for="mobileNo">Mobile</label>
        </span>
        <span>
          <input
            class="swing"
            id="pin"
            type="password"
            placeholder="Pin"
            name="pin"
          /><label for="pin">Pin</label>
        </span>
        <button type="submit" class="btn-gradient cyan">Submit</button>
      </form>
    </div>

    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <td><strong>user_Id</strong></td>
            <td><strong>username</strong></td>
            <td><strong>email</strong></td>
            <td><strong>mobile_no</strong></td>
            <td><strong>mobile_operator</strong></td>
            <td><strong>pin</strong></td>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
          {{#userInfo}}
          <tr>
            <td>{{ user_id }}</td>
            <td>{{ username }}</td>
            <td>{{ email }}</td>
            <td>{{ mobile_no }}</td>
            <td>{{ mobile_operator }}</td>
            <td>{{ pin }}</td>
          </tr>
          {{/userInfo}}
        </tbody>
      </table>
    </div>

    <br />
    <div class="query-page-btn">
      <form method="GET" action="/query">
        <button type="submit" class="btn-gradient cyan">
          Main Query List page
        </button>
      </form>
    </div>
    <br />
    <br />

    <script>
      $(window)
        .on("load resize ", function() {
          var scrollWidth =
            $(".tbl-content").width() - $(".tbl-content table").width();
          $(".tbl-header").css({ "padding-right": scrollWidth });
        })
        .resize();
    </script>
  </body>
</html>
